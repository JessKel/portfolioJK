{% extends 'base-dashboard.html.twig' %}

{% block title %}Competence index{% endblock %}

{% block body %}
    <h1 class="jk-title-admin mb-5">Gestion des compétences</h1>

    <table class="table custom-table">
        <thead>
            <tr>
                <th class="custom-text2">Name</th>
                <th class="custom-text2">Description</th>
                <th class="custom-text2">Image</th>
                <th class="custom-text2">Image2</th>
                <th class="custom-text2">Image3</th>
                <th class="custom-text2">Image4</th>
                <th class="custom-text2">Image5</th>
                <th class="custom-text2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td class="custom-text2">{{ competence.name }}</td>
                <td class="custom-text2">{{ competence.description }}</td>
                <td class="custom-text2"><img src="{{ asset(competence.picture) }}" width="50px" alt="logo"></td>
                <td class="custom-text2"><img src="{{ asset(competence.picture2) }}" width="50px" alt="logo"></td>
                <td class="custom-text2"><img src="{{ asset(competence.picture3) }}" width="50px" alt="logo"></td>
                <td class="custom-text2"><img src="{{ asset(competence.picture4) }}" width="50px" alt="logo"></td>
                <td class="custom-text2"><img src="{{ asset(competence.picture5) }}" width="50px" alt="logo"></td>
                <td class="custom-text2">
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}"><i class="bi bi-pencil-square"></i></a>
                    <a href="{{ path('competence_delete', {'id': competence.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="nav-link btn-jk-new" href="{{ path('competence_new') }}">Créer des nouveaux enregistrements <i class="bi bi-arrow-right-circle-fill"></i></a>
{% endblock %}
