{% extends 'base-dashboard.html.twig' %}

{% block title %}Competence index{% endblock %}

{% block body %}
    <h1 class="jk-title-admin mb-5">Gestion des compétences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>Image4</th>
                <th>Image5</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.name }}</td>
                <td>{{ competence.description }}</td>
                <td>{{ competence.picture }}</td>
                <td>{{ competence.picture2 }}</td>
                <td>{{ competence.picture3 }}</td>
                <td>{{ competence.picture4 }}</td>
                <td>{{ competence.picture5 }}</td>
                <td>
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}"><i class="bi bi-pencil-square"></i></a>
                    <a href="{{ path('competence_delete', {'id': competence.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="nav-link btn-jk-new" href="{{ path('competence_new') }}">Créer des nouveaux enregistrements <i class="bi bi-arrow-right-circle-fill"></i></a>
{% endblock %}
