{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container">
  <h1 class="jk-title text-center mb-5">Mes comp√©tences</h1>
  {% for competence in competences %}
  <div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <div class="card mt-6 card-small border-general">
        <div class="card-header">
          <img src="{{ asset('build/images/dessinbleu.png') }}" class="dessin" alt="dessinBleu">
        </div>
        <div class="card-body">
          <h3 class="jk-title3">{{ competence.name }}</h3>
          <p class="card-text mb-5 jk-text">{{ competence.description }}</p>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card picture-card">
        <div class="card-body">
          <div class="container text-center">
            <div class="row align-items-start">
              <div class="col-6 col-sm-6">
                <img src="{{ asset(competence.picture) }}" class="img-logo">
                <img src="{{ asset(competence.picture2) }}" class="img-logo">
                <img src="{{ asset(competence.picture3) }}" class="img-logo">
              </div>
              <div class="col-6 col-sm-6">
                <img src="{{ asset(competence.picture4) }}" class="img-logo">
                <img src="{{ asset(competence.picture5) }}" class="img-logo">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
</div>
{% endblock %}


