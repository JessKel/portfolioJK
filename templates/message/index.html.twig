{% extends 'base-dashboard.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1 class="jk-title-admin mb-5">Gestion des messages</h1>

    <table class="table custom-table">
        <thead>
            <tr>
                <th class="custom-text4">Nom</th>
                <th class="custom-text4">Email</th>
                <th class="custom-text4">Sujet</th>
                <th class="custom-text4">Message</th>
                <th class="custom-text4">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td class="custom-text4">{{ message.name }}</td>
                <td class="custom-text4">{{ message.email }}</td>
                <td class="custom-text4">{{ message.subject }}</td>
                <td class="custom-text4">{{ message.message }}</td>
                <td class="custom-text4">
                    <a href="{{ path('message_show', {'id': message.id}) }}"><i class="bi bi-eye"></i></a>
                    <a href="{{ path('message_delete', {'id': message.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
