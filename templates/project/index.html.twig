{% extends 'base-dashboard.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1 class="jk-title-admin mb-5">Gestion des projets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Technologies</th>
                <th>Lien</th>
                <th>Logo</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.technology }}</td>
                <td>{{ project.link }}</td>
                <td>{{ project.picture }}</td>
                <td>{{ project.picture2 }}</td>
                <td>
                    <a href="{{ path('project_edit', {'id': project.id}) }}"><i class="bi bi-pencil-square"></i></a>
                    <a href="{{ path('project_delete', {'id': project.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="nav-link btn-jk-new" href="{{ path('project_new') }}">Cr√©er des nouveaux enregistrements <i class="bi bi-arrow-right-circle-fill"></i></a>
{% endblock %}
