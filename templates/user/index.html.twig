{% extends 'base-dashboard.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="jk-title-admin mb-5">Gestion des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }} <a href="{{ path('user_roles', {'id': user.id}) }}"><i class="bi bi-person-gear"></i></a></td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="bi bi-pencil-square"></i></a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="nav-link btn-jk-new" href="{{ path('user_new') }}">Créer un nouvel utilisateur <i class="bi bi-arrow-right-circle-fill"></i></a>
{% endblock %}
